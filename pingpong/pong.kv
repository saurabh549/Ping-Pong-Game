<PongBall>:
    size:50,50
    canvas:
        Color:
            rgb:(1,0,0)
        Ellipse:
            pos:self.pos
            size:self.size
<PongPaddle>
    size:35,200
    canvas:
        Color:
            rgb:(1,1,1)
        Rectangle:
            pos:self.pos
            size:self.size
<PongGame>:
    ball: pong_ball
    player1:player_left
    player2:player_right
    label_1:label1
    label_2:label2
    canvas:
        Color:
            rgb:(0,0,0)
        Rectangle:
            pos: self.center_x-5,0
            size: 10,self.height
        Rectangle:
            pos: 0,0
            size:10,self.height
        Rectangle:
            pos: self.width-10,0
            size: 10,self.height
        Rectangle:
            pos: 0,self.height-10
            size: self.width,10
        Rectangle:
            pos: 0,0
            size: self.width,10
        Ellipse:
            pos : self.width/2-100,self.height/2-100
            size:200,200

    Label:
        id:label1
        font_size : 70
        center_x : root.width/4
        top : root.top-40
        text :str(root.player2.score)
    Label:
        id:label2
        font_size : 70
        center_x : root.width*3/4
        top : root.top-40
        text :str(root.player1.score)
    Label:
        font_size : 70
        center_x : root.width*1/2
        top : root.top-200
        text :str(root.txt)
    PongBall:
        id: pong_ball
        center:self.parent.center
    PongPaddle:
        id:player_left
        x:root.x
        center_y:root.center_y
    PongPaddle:
        id:player_right
        x:root.width-self.width
        center_y:root.center_y